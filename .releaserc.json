{
  "branches": [
    "main"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/github",
    [
      "semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["workflow/info.plist"],
            "from": "<key>version</key>\\s*<string>.*?</string>",
            "to": "<key>version</key>\n\t<string>${nextRelease.version}</string>",
            "results": [
              {
                "file": "workflow/info.plist",
                "hasChanged": true,
                "numMatches": 1,
                "numReplacements": 1
              }
            ],
            "countMatches": true
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "workflow/info.plist"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
